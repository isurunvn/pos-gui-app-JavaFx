<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.Controllers.AddShopController">
    <children>
        <!-- Include the header bar -->
        <fx:include source="header.fxml" />

        <!-- Main Content Area -->
        <HBox VBox.vgrow="ALWAYS">
            <!-- Include the sidebar -->
            <fx:include source="sidebar.fxml" />

            <!-- Main Content -->
            <VBox style="-fx-background-color: white;" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets bottom="20" left="30" right="30" top="20" />
                </padding>

                <!-- Title Section with Back Button -->
                <HBox alignment="CENTER_LEFT" spacing="20">
                    <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack"
                            style="-fx-background-color: white; -fx-border-color: grey; -fx-border-radius: 5;" text="Back" />
                    <Label style="-fx-font-size: 20; -fx-font-weight: bold;" text="Shop Management" />
                    <Label style="-fx-text-fill: #666;" text="Add a new shop" />
                </HBox>

                <!-- Form Content -->
                <VBox spacing="30">
                    <padding>
                        <Insets top="40" />
                    </padding>

                    <!-- Shop Name Field -->
                    <VBox spacing="10">
                        <Label text="Shop Name :" />
                        <TextField fx:id="shopNameField" promptText="Enter new shop name"
                                   style="-fx-pref-width: 300; -fx-background-color: white; -fx-border-color: #E5E7EB; -fx-border-radius: 5;" />
                    </VBox>

                    <!-- Address Field -->
                    <VBox spacing="10">
                        <Label text="Address :" />
                        <TextField fx:id="addressField" promptText="Enter shop's address"
                                   style="-fx-pref-width: 300; -fx-background-color: white; -fx-border-color: #E5E7EB; -fx-border-radius: 5;" />
                    </VBox>

                    <!-- Create Shop Button -->
                    <Button fx:id="createShopButton" mnemonicParsing="false" onAction="#handleCreateShop"
                            style="-fx-background-color: #6366F1; -fx-text-fill: white; -fx-background-radius: 5;"
                            text="Create shop">
                        <VBox.margin>
                            <Insets top="20" />
                        </VBox.margin>
                    </Button>
                </VBox>
            </VBox>
        </HBox>
    </children>
</VBox>