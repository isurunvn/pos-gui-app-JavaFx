<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>


<VBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.Controllers.MenuController">
   <children>
       <!-- Include the header bar -->
       <fx:include source="header.fxml" />
      <VBox prefHeight="321.0" prefWidth="375.0" spacing="20">
          <Button alignment="TOP_LEFT" onAction="#handleAddShop" prefHeight="26.0" prefWidth="102.0" text="1.Add Shop" />
          <Button alignment="TOP_LEFT" onAction="#handleViewShops" text="2.View Shops" />
          <Button alignment="TOP_LEFT" onAction="#handleRemoveShop" prefHeight="26.0" prefWidth="102.0" text="3.Remove Shop" />
          <Button alignment="TOP_LEFT" onAction="#handleAddProduct" text="4.Add Product" />
         <Button alignment="TOP_LEFT" onAction="#handleViewProducts" prefHeight="26.0" prefWidth="102.0" text="5.View Products" />
         <Button alignment="TOP_LEFT" onAction="#handleRemoveProduct" prefHeight="26.0" prefWidth="102.0" text="6.Remove product" />
         <Button alignment="TOP_LEFT" onAction="#handleAddCashier" prefHeight="26.0" prefWidth="102.0" text="7.Add Cashier" />
         <Button alignment="TOP_LEFT" onAction="#handleViewCashiers" prefHeight="26.0" prefWidth="102.0" text="8.View Cashiers" />
         <Button alignment="TOP_LEFT" onAction="#handleRemoveCashier" prefHeight="26.0" prefWidth="102.0" text="9.Remove Cashier" />
         <Button fx:id="viewOrderButton" alignment="TOP_LEFT" onAction="#handleViewOrders" prefHeight="26.0" prefWidth="102.0" text="10.View Orders" />
          <Button alignment="TOP_LEFT" onAction="#handleViewOrderByID" prefHeight="26.0" prefWidth="102.0" text="11.View Order By ID" />
          <Button onAction="#handleRemoveOrder" text="12.Delete Order" />
          <padding>
            <Insets left="20.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</VBox>
