<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.Controllers.UpdateProductController">
    <style>
        /* Base styles */
        .root {
        -fx-font-family: 'Segoe UI', sans-serif;
        -fx-font-size: 14px;
        }

        /* Label styles */
        .form-label {
        -fx-text-fill: #333333;
        -fx-font-size: 14px;
        }

        /* TextField styles */
        .form-field {
        -fx-background-color: #FFFFFF;
        -fx-border-color: #E0E0E0;
        -fx-border-radius: 4px;
        -fx-padding: 8px;
        -fx-pref-width: 200px;
        }

        .form-field:focused {
        -fx-border-color: #6C63FF;
        -fx-border-width: 2px;
        }

        /* Search field styles */
        .search-field {
        -fx-pref-width: 120px;
        }

        /* Primary Button styles */
        .primary-button {
        -fx-background-color: #6C63FF;
        -fx-text-fill: white;
        -fx-font-weight: bold;
        -fx-padding: 8px 16px;
        -fx-border-radius: 4px;
        -fx-background-radius: 4px;
        -fx-cursor: hand;
        -fx-min-width: 100px;
        }

        .primary-button:hover {
        -fx-background-color: #5A52CC;
        }

        .primary-button:pressed {
        -fx-background-color: #4A43AA;
        }

        /* Secondary Button styles */
        .secondary-button {
        -fx-background-color: #E0E0E0;
        -fx-text-fill: #333333;
        -fx-padding: 8px 16px;
        -fx-border-radius: 4px;
        -fx-background-radius: 4px;
        -fx-cursor: hand;
        }

        .secondary-button:hover {
        -fx-background-color: #D0D0D0;
        }

        .secondary-button:pressed {
        -fx-background-color: #C0C0C0;
        }

        /* Update Button styles */
        .update-button {
        -fx-background-color: #28A745;
        -fx-text-fill: white;
        -fx-font-weight: bold;
        -fx-padding: 8px 16px;
        -fx-border-radius: 4px;
        -fx-background-radius: 4px;
        -fx-cursor: hand;
        -fx-min-width: 120px;
        }

        .update-button:hover {
        -fx-background-color: #218838;
        }

        .update-button:pressed {
        -fx-background-color: #1E7E34;
        }

        /* Form Container styles */
        .form-container {
        -fx-background-color: white;
        -fx-padding: 20px;
        -fx-border-color: #E0E0E0;
        -fx-border-radius: 8px;
        -fx-background-radius: 8px;
        -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 10, 0, 0, 2);
        }
    </style>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <children>
        <AnchorPane styleClass="form-container" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20">
            <children>
                <Label layoutX="14.0" layoutY="14.0" text="Product ID:" styleClass="form-label" />
                <TextField fx:id="productIdField" layoutX="120.0" layoutY="10.0" styleClass="form-field, search-field" promptText="Enter ID" />
                <Button layoutX="250.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleSearchProduct" text="Search" styleClass="primary-button" />

                <Label layoutX="14.0" layoutY="64.0" text="Product Name:" styleClass="form-label" />
                <TextField fx:id="productNameField" layoutX="120.0" layoutY="60.0" styleClass="form-field" promptText="Product name" />

                <Label layoutX="14.0" layoutY="114.0" text="Price:" styleClass="form-label" />
                <TextField fx:id="priceField" layoutX="120.0" layoutY="110.0" styleClass="form-field" promptText="Enter price" />

                <Button layoutX="120.0" layoutY="160.0" mnemonicParsing="false" onAction="#handleUpdateProduct" text="Update Product" styleClass="update-button" />

                <Button layoutX="14.0" layoutY="160.0" mnemonicParsing="false" onAction="#handleBack" text="Back" styleClass="secondary-button" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>