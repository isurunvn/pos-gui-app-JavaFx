<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.Controllers.UpdateProductController">
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="Product ID:" />
        <TextField fx:id="productIdField" layoutX="120.0" layoutY="10.0" />
        <Button layoutX="260.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleSearchProduct" text="Search" />

        <Label layoutX="14.0" layoutY="64.0" text="Product Name:" />
        <TextField fx:id="productNameField" layoutX="120.0" layoutY="60.0" />

        <Label layoutX="14.0" layoutY="114.0" text="Price:" />
        <TextField fx:id="priceField" layoutX="120.0" layoutY="110.0" />

        <Button layoutX="120.0" layoutY="160.0" mnemonicParsing="false" onAction="#handleUpdateProduct" text="Update Product" />

<!--        <Button layoutX="500.0" layoutY="350.0" mnemonicParsing="false" onAction="#handleBack" text="Back" />-->

    </children>
</AnchorPane>
